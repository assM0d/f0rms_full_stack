<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6 main">
        <form method="POST" action="/about" id="form" name="form">
          <h2 text="center">Форма приема обращений гражданина</h2>
          <input
            type="text"
            class="box"
            id="firstName"
            name="firstName"
            placeholder="Фамилия"
            required
          />
          <br />
          <input
            type="text"
            class="box"
            id="secondName"
            name="secondName"
            placeholder="Имя"
            required
          />
          <br />
          <input
            type="text"
            class="box"
            id="lastName"
            name="lastName"
            placeholder="Отчество"
            required
          />
          <br />
          <input
            type="text"
            class="box"
            id="phone"
            name="phone"
            placeholder="Телефон"
            required
          />
          <br />
          <input
            type="text"
            class="box"
            id="appeal"
            name="appeal"
            placeholder="Обращение..."
            value="123"
            required
          />
          <br />
          <button type="submit" id="submit">отправить</button>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
  <script
    src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
  ></script>
  <script src="../xhr.js"></script>
</body>